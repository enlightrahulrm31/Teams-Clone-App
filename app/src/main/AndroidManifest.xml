<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bcd">

    <uses-permission android:name="android.permission.INTERNET" />                                      <!-- permission for internet -->
    <uses-permission android:name="android.permission.CALL_PHONE" />                                    <!-- permission for phone call -->
    <uses-feature android:name="android.hardware.wifi" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />                       <!-- permission to send and recieve notification -->

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bcd">

        <service android:name=".FirebaseService"
            android:permission="com.google.android.c2dm.permission.SEND">

            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>

        </service>

        <activity android:name=".MeetingChatRecyclerViewActivity"></activity>
        <activity android:name=".CallingActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ChatRecyclerViewActivity" />
        <activity android:name=".TeamRecyclerViewActivity" />
        <activity android:name=".DestinationActivity" />
        <activity android:name=".ManageMeetActivity" />
        <activity android:name=".BoardingActivity">


        </activity>
        <activity android:name=".ReclyclerViewActivity">
        </activity>
        <activity android:name=".CreateMeetActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".SignUpActivity" />

        <activity android:name=".SpalshActivity">                                             <!-- THIS ACTIVITY IS  SPLASH ACTIVITY   here we will put intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <receiver android:name=".AlarmReciever" />

    </application>

</manifest>