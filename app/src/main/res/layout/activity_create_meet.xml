<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateMeetActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        app:srcCompat="@drawable/meeting_shedule" />

    <EditText
        android:id="@+id/tvdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter The Description"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="67dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selecttimetextmeet"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/selectdatetextmeet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp" />
    <Button
        android:id="@+id/selectdatemeet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="26dp"
        android:text="Select Date"
        android:textSize="26dp"/>

    <Button
        android:id="@+id/selecttimemeet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="26dp"
        android:text="Select time"
        android:textSize="26dp"/>

    <Button
        android:id="@+id/buttonmmeet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="26dp"
        android:text="ADD MEETING"
        android:textSize="26dp"/>
</LinearLayout>



